<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stepactive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teampietro.hero.StepFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-thin"
            android:layout_marginTop="32dp"
            android:text="STEPS TODAY"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-thin"
            android:text="-"
            android:textAlignment="center"
            android:textSize="64sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="128dp"
            android:scaleType="fitXY"
            android:src="@drawable/runner"
            android:visibility="visible" />

        <Button
            android:id="@+id/claimPoints"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/claim_button"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_margin="16dp"
            android:text="Claim +4 points"
            android:textAlignment="center"
            android:visibility="invisible" />
    </RelativeLayout>

</FrameLayout>

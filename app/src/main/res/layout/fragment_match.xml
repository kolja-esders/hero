<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teampietro.hero.MatchFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-thin"
        android:text="YOUR MATCH"
        android:id="@+id/heading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/heading"
        android:textSize="30sp"
        android:textColor="#241623"
        android:layout_marginTop="-4dp"
        android:text="Arjen Robben"
        android:id="@+id/textView4" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/robben_face" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal|center">

        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/faces_image"
                android:layout_width="50dp"
                android:layout_height="50dp"


                android:layout_centerVertical="true"
                android:src="@drawable/face" />

            <TextView
                android:id="@+id/face-sim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/faces_image"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-thin"
                android:text="1"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/image_share"

            android:layout_marginStart="54dp"
            android:layout_toEndOf="@+id/ly2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/happiness_image"
                android:layout_width="50dp"
                android:layout_height="50dp"


                android:src="@drawable/envelope" />

            <TextView
                android:id="@+id/postsim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"

                android:fontFamily="sans-serif-thin"
                android:text="3"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_share"

            android:layout_marginStart="54dp"
            android:layout_toEndOf="@+id/ly3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/score_image"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_centerVertical="true"
                android:src="@drawable/thumbs_up"

                />


            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:textAlignment="center"

                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal"
                android:text="Sushi\nTennis"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textAlignment="center"
        android:background="@drawable/claim_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:paddingTop="8dp"
        android:textColor="#fff"
        android:onClick="nextScreen"
        android:text="Continue"
        android:paddingBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>


</RelativeLayout>

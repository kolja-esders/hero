<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teampietro.hero.FannessActivity"
    android:id="@+id/fanness">


        <ImageView
            android:id="@+id/image_share"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_share"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal|center">

                <LinearLayout
                    android:id="@+id/ly1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">


                        <ImageView
                            android:id="@+id/faces_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"


                            android:layout_centerVertical="true"
                            android:src="@drawable/teamwork" />

                        <TextView
                            android:id="@+id/faces"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/faces_image"
                            android:layout_marginTop="16dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="24sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ly2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_share"

                    android:layout_marginStart="35dp"
                    android:layout_toEndOf="@+id/ly1"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/redness_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"


                            android:src="@drawable/logo" />

                        <TextView
                            android:id="@+id/redness"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:fontFamily="sans-serif-thin"
                            android:layout_marginTop="16dp"
                            android:text="2"
                            android:textAlignment="center"
                            android:textSize="24sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ly3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_share"

                    android:layout_marginStart="35dp"
                    android:layout_toEndOf="@+id/ly2"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/happiness_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"


                            android:src="@drawable/emotion" />

                        <TextView
                            android:id="@+id/happiness"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"

                            android:fontFamily="sans-serif-thin"
                            android:text="3"
                            android:textAlignment="center"
                            android:textSize="24sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ly4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_share"

                    android:layout_marginStart="35dp"
                    android:layout_toEndOf="@+id/ly3"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/score_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"


                            android:layout_centerVertical="true"
                            android:src="@drawable/medal"

                            />


                        <TextView
                            android:id="@+id/score"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"

                            android:fontFamily="sans-serif-thin"
                            android:gravity="center_horizontal"
                            android:text="4"
                            android:textSize="24sp" />

                </LinearLayout>
        </LinearLayout>



        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textAlignment="center"
            android:background="@drawable/claim_button"
            android:text="Claim Skillpoints"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"/>



    </RelativeLayout>


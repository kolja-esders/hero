<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:clipToPadding="false"
    >

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="#fff"
    android:clipToPadding="false"
    app:cardElevation="2dp"
    app:cardMaxElevation="8dp"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/gradient"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/points"
            android:layout_alignBottom="@+id/points"
            android:layout_alignStart="@+id/improveScore"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:text="Endurance"
            android:textAlignment="center"
            android:textColor="#f0eaea"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-thin"
            android:text="20"
            android:width="56dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:height="56dp"
            android:background="@drawable/white_ball"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/improveScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/coverImage"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/challenge_button"
            android:text="Improve score"
            android:textColor="#fff" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

</RelativeLayout>